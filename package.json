{
  "name": "apple-container",
  "displayName": "Apple Container",
  "description": "VS Code extension for Apple Container CLI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:apple-container.listContainers",
    "onCommand:apple-container.startSystem",
    "onCommand:apple-container.refreshContainers"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
    "view/title": [
      {
        "command": "apple-container.refreshContainers",
        "when": "view == appleContainersView",
        "group": "navigation"
      }
    ]
    },

    "commands": [
      {
        "command": "apple-container.listContainers",
        "title": "Container: List Containers"
      },
      {
      "command": "apple-container.startSystem",
      "title": "Container: Start System"
      },
      {
        "command": "apple-container.refreshContainers",
        "title": "Container: Refresh Containers",
        "icon": "$(refresh)"
      }

    ],
    "views": {
      "explorer": [
        {
          "id": "appleContainersView",
          "name": "Apple Containers"
        }
      ]
    }


  },
  "viewsWelcome": [],
  "viewsContainers": {
    "appleContainersView": [
      {
        "command": "apple-container.refreshContainers",
        "title": "Refresh",
        "icon": "refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
